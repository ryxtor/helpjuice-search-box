<h1 class="font-semibold text-4xl">Articles:</h1>
<div class="container mx-auto pt-6">
  <%= form_with url: articles_path, method: :get, data: { controller: "search", turbo_frame: "search_results", search_target: "search" } do |form| %>
    <%= form.text_field :search, placeholder: "Search articles...", data: { action: "input->search#perform" }, class: "w-full px-4 py-2 text-xl border border-gray-300 rounded shadow" %>
  <% end %>

  <%= turbo_frame_tag "search_results" do %>
    <%= render partial: "articles", locals: { articles: @articles } %>
  <% end %>
</div>